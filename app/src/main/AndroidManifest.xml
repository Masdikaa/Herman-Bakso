<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_bakso_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HermanBakso"
        tools:targetApi="31">
        <activity
            android:name=".LandingPageActivity"
            android:exported="true"
            android:theme="@style/Theme.HermanBakso.Light">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".layout.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.HermanBakso.Light" />
        <activity
            android:name=".layout.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.HermanBakso.Light">

        </activity>
        <activity
            android:name=".layout.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.HermanBakso.Light" />
    </application>

</manifest>